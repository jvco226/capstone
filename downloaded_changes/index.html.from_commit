<!DOCTYPE html>
<html lang="en" class="h-full">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Online Trivia</title>
    <!-- Load Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Google Font 'Sniglet' -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Sniglet&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Sniglet', sans-serif;
        }
        #message-box {
            transition: all 0.3s ease-in-out;
        }
        /* Pin input style */
        #game-pin::placeholder {
            color: #9ca3af;
            text-transform: none;
        }
        #game-pin:focus::placeholder {
            color: transparent;
        }
        /* Displayed pin style */
        #lobby-game-pin {
            font-size: 4rem;
            letter-spacing: 0.1em;
        }
    </style>
</head>
<body class="bg-red-900 text-gray-800 h-full flex flex-col items-center justify-center p-4">

    <div class="w-full max-w-lg bg-white rounded-xl shadow-2xl overflow-hidden">
        <nav class="bg-red-700 text-white p-4 flex justify-center space-x-6">
            <button id="nav-home" class="nav-link px-4 py-1 text-xl rounded-md font-bold hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-400" data-page="home-page">Home</button>
            <button id="nav-login" class="nav-link px-4 py-1 text-xl rounded-md font-bold hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-400" data-page="login-page">Login</button>
            <button id="nav-register" class="nav-link px-4 py-1 text-xl rounded-md font-bold hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-400" data-page="register-page">Register</button>
        </nav>

        <div id="message-box" class="hidden p-4 m-4 rounded-lg relative font-semibold text-center">
            <span id="message-text"></span>
            <button id="close-message" class="absolute top-1 right-3 text-lg font-bold">&times;</button>
        </div>

        <div class="p-6 md:p-8">
            <!-- Home Page -->
            <div id="home-page" class="page-content">
                <p id="logged-in-user" class="text-sm text-gray-600 text-center mb-2 hidden">
                    You're logged in as <span id="username-display" class="font-semibold"></span>
                </p>
                <h1 class="text-6xl font-black mb-6 text-center text-red-600">Online Trivia ðŸ“š</h1>

                <div class="space-y-8">
                    <!-- Host a Game -->
                    <div class="text-center">
                        <h2 class="text-2xl font-bold mb-3 text-gray-700">Host a Game!</h2>
                        <button id="create-room-btn"
                                class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-lg font-bold uppercase tracking-wider text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                            New Room
                        </button>
                    </div>

                    <!-- Divider -->
                    <div class="flex items-center">
                        <div class="flex-grow border-t border-gray-300"></div>
                        <span class="flex-shrink mx-4 text-gray-500">OR</span>
                        <div class="flex-grow border-t border-gray-300"></div>
                    </div>

                    <!-- Join a Game -->
                    <div>
                        <h2 class="text-2xl font-bold mb-3 text-gray-700 text-center">Join a Game!</h2>
                        <form id="join-form" class="space-y-4" novalidate>
                            <div>
                                <label for="game-pin" class="block text-sm font-bold text-gray-700 sr-only">Game PIN</label>
                                <input type="text" id="game-pin" name="game-pin" required
                                       maxlength="6"
                                       pattern="\d{6}"
                                       inputmode="numeric"
                                       class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-center text-3xl font-black tracking-widest uppercase"
                                       placeholder="ENTER PIN">
                            </div>
                            <button type="submit"
                                    class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-lg font-bold uppercase tracking-wider text-white bg-blue-500 hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-400">
                                Join Room
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Register Page -->
            <div id="register-page" class="page-content hidden">
                <h1 class="text-3xl font-black mb-6 text-center text-red-700">Create Your Account</h1>
                <form id="register-form" class="space-y-4">
                    <div>
                        <label for="username" class="block text-sm font-bold text-gray-700">Username</label>
                        <input type="text" id="username" name="username" required
                               class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500 text-lg">
                    </div>
                    <div>
                        <label for="password" class="block text-sm font-bold text-gray-700">Password</label>
                        <input type="password" id="password" name="password" required
                               class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500 text-lg">
                    </div>
                    <button type="submit"
                            class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-lg font-bold uppercase tracking-wider text-white bg-green-500 hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-400">
                        Register
                    </button>
                </form>
            </div>

            <!-- Login Page -->
            <div id="login-page" class="page-content hidden">
                <h1 class="text-3xl font-black mb-6 text-center text-red-700">Login to Your Account</h1>
                <form id="login-form" class="space-y-4">
                    <div>
                        <label for="login-username" class="block text-sm font-bold text-gray-700">Username</label>
                        <input type="text" id="login-username" name="username" required
                               class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-lg">
                    </div>

                    <div>
                        <label for="login-password" class="block text-sm font-bold text-gray-700">Password</label>
                        <input type="password" id="login-password" name="password" required

                               class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-lg">

                    </div>
                    <button type="submit"
                            class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-lg font-bold uppercase tracking-wider text-white bg-blue-500 hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-400">
                        Login
                    </button>
                </form>

            </div>
            <!-- Lobby Page -->
            <div id="lobby-page" class="page-content hidden">
                <h1 class="text-4xl font-black mb-6 text-center text-red-600">Lobby</h1>
                
                <div class="text-center p-6 bg-gray-50 rounded-lg">
                    <h2 class="text-2xl font-bold text-gray-700">Share this PIN with your friends.</h2>
                    
                    <!-- Display PIN -->
                    <div class="my-4">
                        <span id="lobby-game-pin" class="font-black text-red-600">...</span>
                    </div>

                    <p class="text-lg text-gray-600 mb-6">Waiting for players to join...</p>

                    <!-- Player list -->
                    <div id="player-list" class="min-h-[100px] bg-white border border-gray-200 rounded-lg p-3 text-left mb-6">
                        <h3 class="font-bold text-gray-800 text-lg mb-2">Players (1/8)</h3>
                        <ul id="players" class="list-disc list-inside">
                            <li>Host</li>
                        </ul>
                    </div>
                    
                    <!-- Ready Button (for non-host players) -->
                    <div id="ready-section" class="mb-4 hidden">
                        <button id="ready-btn"
                                class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-lg font-bold uppercase tracking-wider text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-400">
                            Ready
                        </button>
                    </div>
                    
                    <div class="grid grid-cols-2 gap-4">
                        <button id="leave-lobby-btn"
                                class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-lg font-bold uppercase tracking-wider text-white bg-red-500 hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-400">
                            Leave Lobby
                        </button>
                        <button id="start-game-btn"
                                class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-lg font-bold uppercase tracking-wider text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-400 disabled:bg-gray-400 disabled:cursor-not-allowed"
                                disabled>
                            Start Game!
                        </button>
                    </div>
                    <p id="start-game-status" class="text-sm text-gray-600 text-center mt-2"></p>
                </div>
            </div>

            <!-- Game Page (Question Display) -->
            <div id="game-page" class="page-content hidden">
                <div class="text-center">
                    <div class="mb-4">
                        <span class="text-lg font-bold text-gray-600">
                            Question <span id="question-number">1</span> of <span id="total-questions">10</span>
                        </span>
                    </div>
                    <h1 class="text-3xl font-black mb-6 text-red-600" id="question-text">Loading question...</h1>
                    
                    <div class="space-y-4 mt-8">
                        <button id="answer-a" class="answer-btn w-full py-4 px-6 text-left border-2 border-gray-300 rounded-lg shadow-sm text-lg font-bold bg-white hover:bg-blue-50 focus:outline-none focus:ring-2 focus:ring-blue-500" data-answer="A">
                            <span class="font-black text-blue-600 mr-3">A:</span>
                            <span id="option-a">Option A</span>
                        </button>
                        <button id="answer-b" class="answer-btn w-full py-4 px-6 text-left border-2 border-gray-300 rounded-lg shadow-sm text-lg font-bold bg-white hover:bg-blue-50 focus:outline-none focus:ring-2 focus:ring-blue-500" data-answer="B">
                            <span class="font-black text-blue-600 mr-3">B:</span>
                            <span id="option-b">Option B</span>
                        </button>
                        <button id="answer-c" class="answer-btn w-full py-4 px-6 text-left border-2 border-gray-300 rounded-lg shadow-sm text-lg font-bold bg-white hover:bg-blue-50 focus:outline-none focus:ring-2 focus:ring-blue-500" data-answer="C">
                            <span class="font-black text-blue-600 mr-3">C:</span>
                            <span id="option-c">Option C</span>
                        </button>
                        <button id="answer-d" class="answer-btn w-full py-4 px-6 text-left border-2 border-gray-300 rounded-lg shadow-sm text-lg font-bold bg-white hover:bg-blue-50 focus:outline-none focus:ring-2 focus:ring-blue-500" data-answer="D">
                            <span class="font-black text-blue-600 mr-3">D:</span>
                            <span id="option-d">Option D</span>
                        </button>
                    </div>
                    <p id="answer-status" class="mt-4 text-gray-600 font-semibold"></p>
                </div>
            </div>

            <!-- Results Page -->
            <div id="results-page" class="page-content hidden">
                <div class="text-center">
                    <h1 class="text-4xl font-black mb-6 text-red-600">Results</h1>
                    <div id="results-content" class="space-y-4">
                        <!-- Results will be populated here -->
                    </div>
                    <p class="mt-6 text-gray-600">Next question starting soon...</p>
                </div>
            </div>

            <!-- End Game Page -->
            <div id="end-game-page" class="page-content hidden">
                <div class="text-center">
                    <h1 class="text-5xl font-black mb-6 text-red-600">Game Over! ðŸŽ‰</h1>
                    <h2 class="text-2xl font-bold mb-8 text-gray-700">Final Scores</h2>
                    <div id="final-scores" class="space-y-3 mb-8">
                        <!-- Final scores will be populated here -->
                    </div>
                    <button id="back-to-home-btn"
                            class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-lg font-bold uppercase tracking-wider text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-400">
                        Back to Home
                    </button>
                </div>
            </div>

            </div>
        </div>
    </div>

    <!-- Socket.IO client -->
    <script src="/socket.io/socket.io.js"></script>

    <script>
    document.addEventListener('DOMContentLoaded', () => {
        // create socket after socket.io script is loaded
        let socket = io();

        // Page containers
        const pages = document.querySelectorAll('.page-content');
        const navContainer = document.querySelector('nav');

        // Forms and Buttons
        const registerForm = document.getElementById('register-form');
        const loginForm = document.getElementById('login-form');
        const createRoomBtn = document.getElementById('create-room-btn');
        const joinForm = document.getElementById('join-form');
        const startGameBtn = document.getElementById('start-game-btn');
        const leaveLobbyBtn = document.getElementById('leave-lobby-btn');

        // Message Box
        const messageBox = document.getElementById('message-box');
        const messageText = document.getElementById('message-text');
        const closeMessageBtn = document.getElementById('close-message');

        // Lobby
        const lobbyGamePin = document.getElementById('lobby-game-pin');
        const playerListContainer = document.getElementById('player-list');
        const playersUl = document.getElementById('players');
        const readyBtn = document.getElementById('ready-btn');
        const readySection = document.getElementById('ready-section');
        const startGameBtn = document.getElementById('start-game-btn');
        const startGameStatus = document.getElementById('start-game-status');
        let isReady = false;
        let isHost = false;

        // Input
        const gamePinInput = document.getElementById('game-pin');

        // Globals
        let messageTimeout;
        let username = null;
        let players = [];
        let currentRoomCode = null;

        // --- Utility Functions ---
        function showPage(pageId) {
            pages.forEach(page => page.classList.add('hidden'));
            const activePage = document.getElementById(pageId);
            if (activePage) activePage.classList.remove('hidden');
            hideMessage();
        }

        const loggedInUser = document.getElementById('logged-in-user');
        const usernameDisplay = document.getElementById('username-display');

        function updateLoggedInDisplay() {
            if (username) {
                usernameDisplay.textContent = username;
                loggedInUser.classList.remove('hidden');
            } else {
                loggedInUser.classList.add('hidden');
            }
        }

        function showMessage(message, type = 'info') {
            if (messageTimeout) clearTimeout(messageTimeout);
            messageText.textContent = message;
            messageBox.classList.remove('hidden', 'bg-green-600', 'bg-red-500', 'text-white');
            if (type === 'success') messageBox.classList.add('bg-green-600', 'text-white');
            else if (type === 'error') messageBox.classList.add('bg-red-500', 'text-white');
            else messageBox.classList.add('bg-green-600', 'text-white');
            messageTimeout = setTimeout(hideMessage, 5000);
        }

        function hideMessage() {
            if (messageTimeout) clearTimeout(messageTimeout);
            messageBox.classList.add('hidden');
        }

        function updatePlayerList(playerList = null) {
            const listToUse = playerList || players;
            playersUl.innerHTML = '';
            listToUse.forEach((p, index) => {
                const li = document.createElement('li');
                const playerName = typeof p === 'string' ? p : p.name;
                const isPlayerReady = typeof p === 'object' && p.ready;
                const isPlayerHost = index === 0;
                
                li.className = 'flex items-center justify-between';
                li.innerHTML = `
                    <span>${playerName}${isPlayerHost ? ' (Host)' : ''}</span>
                    ${isPlayerReady ? '<span class="text-green-600 font-bold">âœ“ Ready</span>' : '<span class="text-gray-400">Not ready</span>'}
                `;
                playersUl.appendChild(li);
            });
            const countText = `Players (${listToUse.length}/8)`;
            playerListContainer.querySelector('h3').textContent = countText;
            
            // Update ready button state
            if (listToUse.length > 0 && typeof listToUse[0] === 'object') {
                // Find current player by checking socket.id or by name if socket.id not available
                const currentPlayer = listToUse.find(p => {
                    if (p.id) return p.id === socket.id;
                    // Fallback: check by name if we're not the host
                    return !isHost && p.name === (username || 'Guest');
                });
                
                if (currentPlayer && !isHost) {
                    isReady = currentPlayer.ready || false;
                    readyBtn.textContent = isReady ? 'Not Ready' : 'Ready';
                    readyBtn.className = isReady 
                        ? 'w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-lg font-bold uppercase tracking-wider text-white bg-orange-600 hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-400'
                        : 'w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-lg font-bold uppercase tracking-wider text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-400';
                }
                
                // Update start button state (only for host)
                if (isHost) {
                    const nonHostPlayers = listToUse.slice(1);
                    const allReady = nonHostPlayers.length === 0 || nonHostPlayers.every(p => p.ready);
                    startGameBtn.disabled = !allReady;
                    if (nonHostPlayers.length > 0) {
                        const readyCount = nonHostPlayers.filter(p => p.ready).length;
                        startGameStatus.textContent = allReady 
                            ? 'All players ready!' 
                            : `Waiting for ${nonHostPlayers.length - readyCount} player(s) to be ready...`;
                    } else {
                        startGameStatus.textContent = '';
                    }
                }
            }
        }

        // --- Event Listeners ---
        gamePinInput.addEventListener('input', (e) => {
            e.target.value = e.target.value.replace(/\D/g, '');
        });

        navContainer.addEventListener('click', (e) => {
            const link = e.target.closest('.nav-link');
            if (link) {
                const pageId = link.getAttribute('data-page');
                if (pageId) showPage(pageId);
            }
        });

        closeMessageBtn.addEventListener('click', hideMessage);

        // Registration
        registerForm.addEventListener('submit', async (e) => {
            e.preventDefault(); 
            const regUser = document.getElementById('username').value;
            const regPass = document.getElementById('password').value;
            if (!regUser || !regPass) return showMessage('Username and password are required.', 'error');
            showMessage('Registering...', 'info');

            try {
                const response = await fetch('/api/register', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ username: regUser, password: regPass }),
                });
                const data = await response.json();
                if (response.ok) {
                    showMessage('Registration successful!', 'success');
                    registerForm.reset();
                    showPage('home-page');
                } else showMessage(data.error || 'Registration failed.', 'error');
            } catch {
                showMessage('An error occurred. Please try again.', 'error');
            }
        });

        // Login
        loginForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            const loginUser = document.getElementById('login-username').value;
            const loginPass = document.getElementById('login-password').value;
            if (!loginUser || !loginPass) return showMessage('Username and password are required.', 'error');
            showMessage('Logging in...', 'info');

            try {
                const response = await fetch('/api/login', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ username: loginUser, password: loginPass }),
                });
                const data = await response.json();

                if (response.ok) {
                    username = loginUser;
                    showMessage(`Welcome back, ${username}!`, 'success');
                    updateLoggedInDisplay();
                    loginForm.reset();
                    showPage('home-page');
                } else showMessage(data.error || 'Login failed. Check credentials.', 'error');
            } catch {
                showMessage('An error occurred. Please try again.', 'error');
            }
        });

        // Create Room (Host)
        createRoomBtn.addEventListener('click', async () => {
            showMessage('Hosting new game...', 'info');
            try {
                const response = await fetch('/api/create-room', { method: 'POST' });
                const data = await response.json();
                if (response.ok && data.code) {
                    lobbyGamePin.textContent = data.code;
                    currentRoomCode = data.code;
                    isHost = true; // Creator is always the host
                    readySection.classList.add('hidden'); // Hide ready button for host
                    showPage('lobby-page');
                    socket.emit('joinRoom', { code: data.code, playerName: username || 'Host' });
                    showMessage(`Game ${data.code} created!`, 'success');
                } else showMessage(data.error || 'Failed to create game.', 'error');
            } catch {
                showMessage('An error occurred. Please try again.', 'error');
            }
        });

        // Join Room
        joinForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            const pin = gamePinInput.value.trim();
            if (!/^\d{6}$/.test(pin)) return showMessage('PIN must be 6 digits.', 'error');
            showMessage(`Checking game ${pin}...`, 'info');

            try {
                const response = await fetch('/api/join-room', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ code: pin, playerName: username || 'Guest' }),
                });
                const data = await response.json();

                if (!response.ok) return showMessage(data.error || 'Could not join room.', 'error');

                socket.emit('joinRoom', { code: pin, playerName: username || 'Guest' });
            } catch {
                showMessage('An error occurred. Please try again.', 'error');
            }

            socket.on('joinError', (msg) => {
                showMessage(msg, 'error');
            });

        });

        // Listen for server confirmation
        socket.on('joinSuccess', ({ code, players: serverPlayers }) => {
            currentRoomCode = code;
            lobbyGamePin.textContent = code;
            
            // Check if this player is the host (first player or by socket.id)
            isHost = serverPlayers.length > 0 && (
                (serverPlayers[0].id && serverPlayers[0].id === socket.id) || 
                (!serverPlayers[0].id && serverPlayers.indexOf(serverPlayers.find(p => p.id === socket.id)) === 0) ||
                (serverPlayers[0].name === (username || 'Host') && serverPlayers.length === 1)
            );
            
            // Show/hide ready button based on host status
            if (isHost) {
                readySection.classList.add('hidden');
            } else {
                readySection.classList.remove('hidden');
            }
            
            updatePlayerList(serverPlayers);
            showPage('lobby-page');
            showMessage('Room joined!', 'success');
        });

        // Listen for join errors
        socket.on('joinError', (message) => {
            showMessage(message, 'error');
        })

        // Listen for server broadcasts of the player list
        socket.on('updatePlayers', (playerList) => {
            // Check if this player is the host (first player or by socket.id)
            if (playerList.length > 0) {
                const firstPlayer = playerList[0];
                isHost = (firstPlayer.id && firstPlayer.id === socket.id) || 
                         (playerList.find(p => p.id === socket.id) && playerList.indexOf(playerList.find(p => p.id === socket.id)) === 0);
            }
            
            // Show/hide ready button based on host status
            if (isHost) {
                readySection.classList.add('hidden');
            } else {
                readySection.classList.remove('hidden');
            }
            
            updatePlayerList(playerList);
        });
        
        // Ready button click
        readyBtn.addEventListener('click', () => {
            if (!currentRoomCode) return;
            socket.emit('toggleReady', { code: currentRoomCode });
        });

        // Leave Lobby
        leaveLobbyBtn.addEventListener('click', () => {
            if (currentRoomCode) {
                socket.emit('leaveRoom', currentRoomCode);
                currentRoomCode = null;
            }

            players = [];
            updatePlayerList();
            showPage('home-page');
            showMessage('You left the lobby.', 'success');
        });

        // Start Game
        startGameBtn.addEventListener('click', () => {
            if (!currentRoomCode) {
                showMessage('Not in a room.', 'error');
                return;
            }
            if (!isHost) {
                showMessage('Only the host can start the game.', 'error');
                return;
            }
            showMessage('Starting game!', 'info');
            socket.emit('startGame', { code: currentRoomCode });
        });

        // Answer buttons
        const answerButtons = document.querySelectorAll('.answer-btn');
        let selectedAnswer = null;
        let hasAnswered = false;

        answerButtons.forEach(btn => {
            btn.addEventListener('click', () => {
                if (hasAnswered || !currentRoomCode) return;
                
                selectedAnswer = btn.getAttribute('data-answer');
                hasAnswered = true;
                
                // Disable all buttons
                answerButtons.forEach(b => {
                    b.disabled = true;
                    b.classList.add('opacity-50', 'cursor-not-allowed');
                });
                
                // Highlight selected
                btn.classList.add('bg-blue-200', 'border-blue-500');
                
                // Show status
                document.getElementById('answer-status').textContent = 'Answer submitted! Waiting for others...';
                
                // Send answer to server
                socket.emit('submitAnswer', { code: currentRoomCode, answer: selectedAnswer });
            });
        });

        // Game event handlers
        socket.on('gameStarted', ({ question, totalQuestions }) => {
            showPage('game-page');
            displayQuestion(question, totalQuestions);
            hasAnswered = false;
            selectedAnswer = null;
        });

        socket.on('nextQuestion', ({ question, totalQuestions }) => {
            showPage('game-page');
            displayQuestion(question, totalQuestions);
            hasAnswered = false;
            selectedAnswer = null;
        });

        socket.on('showResults', ({ correctAnswer, results, questionNumber, totalQuestions }) => {
            showPage('results-page');
            displayResults(correctAnswer, results, questionNumber, totalQuestions);
        });

        socket.on('gameFinished', ({ scores }) => {
            showPage('end-game-page');
            displayFinalScores(scores);
        });

        socket.on('gameError', (message) => {
            showMessage(message, 'error');
        });

        function displayQuestion(question, totalQuestions) {
            document.getElementById('question-text').textContent = question.question_text;
            document.getElementById('option-a').textContent = question.option_a;
            document.getElementById('option-b').textContent = question.option_b;
            document.getElementById('option-c').textContent = question.option_c;
            document.getElementById('option-d').textContent = question.option_d;
            document.getElementById('question-number').textContent = question.questionNumber || 1;
            document.getElementById('total-questions').textContent = totalQuestions;
            document.getElementById('answer-status').textContent = '';

            // Reset buttons
            answerButtons.forEach(btn => {
                btn.disabled = false;
                btn.classList.remove('opacity-50', 'cursor-not-allowed', 'bg-blue-200', 'border-blue-500', 'bg-green-200', 'bg-red-200', 'border-green-500', 'border-red-500');
            });
        }

        function displayResults(correctAnswer, results, questionNumber, totalQuestions) {
            const resultsContent = document.getElementById('results-content');
            resultsContent.innerHTML = '';

            // Show correct answer
            const correctOption = document.getElementById(`option-${correctAnswer.toLowerCase()}`);
            const correctText = correctOption ? correctOption.textContent : '';

            const header = document.createElement('div');
            header.className = 'mb-4 p-4 bg-gray-100 rounded-lg';
            header.innerHTML = `
                <p class="text-lg font-bold text-gray-700">Correct Answer: <span class="text-green-600">${correctAnswer} - ${correctText}</span></p>
            `;
            resultsContent.appendChild(header);

            // Show player results
            results.forEach(result => {
                const resultDiv = document.createElement('div');
                resultDiv.className = `p-4 rounded-lg ${result.correct ? 'bg-green-100 border-2 border-green-500' : 'bg-red-100 border-2 border-red-500'}`;
                resultDiv.innerHTML = `
                    <div class="flex justify-between items-center">
                        <span class="font-bold text-lg">${result.playerName}</span>
                        <div class="flex items-center space-x-4">
                            <span class="${result.correct ? 'text-green-600' : 'text-red-600'} font-bold">
                                ${result.correct ? 'âœ“ Correct' : 'âœ— Wrong'} (${result.answer || 'No answer'})
                            </span>
                            <span class="font-black text-blue-600">Score: ${result.score}</span>
                        </div>
                    </div>
                `;
                resultsContent.appendChild(resultDiv);
            });
        }

        function displayFinalScores(scores) {
            const finalScoresDiv = document.getElementById('final-scores');
            finalScoresDiv.innerHTML = '';

            scores.forEach((player, index) => {
                const scoreDiv = document.createElement('div');
                const isWinner = index === 0;
                scoreDiv.className = `p-4 rounded-lg ${isWinner ? 'bg-yellow-100 border-2 border-yellow-500' : 'bg-gray-100 border-2 border-gray-300'}`;
                scoreDiv.innerHTML = `
                    <div class="flex justify-between items-center">
                        <div class="flex items-center space-x-3">
                            <span class="text-2xl font-black">${index + 1}.</span>
                            <span class="font-bold text-lg">${player.name}</span>
                            ${isWinner ? '<span class="text-yellow-600 font-bold">ðŸ‘‘ Winner!</span>' : ''}
                        </div>
                        <span class="font-black text-2xl text-blue-600">${player.score} pts</span>
                    </div>
                `;
                finalScoresDiv.appendChild(scoreDiv);
            });
        }

        // Back to home button
        document.getElementById('back-to-home-btn').addEventListener('click', () => {
            if (currentRoomCode) {
                socket.emit('leaveRoom', currentRoomCode);
                currentRoomCode = null;
            }
            players = [];
            updatePlayerList();
            showPage('home-page');
        });

        // Initial view
        showPage('home-page');
    });
</script>
